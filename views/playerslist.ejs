<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Player Score</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
  <div class="box" id="heading">
    <h1> Player Score Board </h1>
  </div>
  <div class="box">
    <form class="player" action="/" method="post">
      <input type="text" name="playername" placeholder="New Player" autocomplete="off">
      <input type="text" name="playerscore" placeholder="New Score" autocomplete="off">
      <button class="btn btn-dark btn-lg operation-button" type="submit" name="buttonoperation" value="add">Add</button><br />
      <button class="btn btn-light btn-lg" type="submit" name="buttonoperation" name="buttonoperation" value="update">Update</button>
      <button class="btn btn-light btn-lg" type="submit" form='deleteForm' name="buttonoperation" value="delete">Delete</button>
    </form>

    <%  eplayers.forEach(function(eplayer){ %>
    <form id='deleteForm' action="/delete" method="post">
      <div class="player">
        <table>
          <input type="checkbox" class="radio" name="checkedBox" value="<%= eplayer._id%>">
          <tr>
            <td><%= eplayer.name  %></td>
            <td align='right'><%= eplayer.score %></td>
          </tr>
        </table>
      </div>
    </form>
    <% } );%>
  </div>
</body>
</html>
